{
  "scenario_id": "CONC-001",
  "name": "Concentrated Position Risk",
  "description": "Identify clients with single positions representing significant portfolio concentration risk",
  "category": "rebalance",
  "criteria": [
    {
      "field": "largest_position_pct",
      "operator": "gt",
      "value": 25.0,
      "weight": 1.0
    },
    {
      "field": "portfolio_value",
      "operator": "gt",
      "value": 250000,
      "weight": 0.8
    },
    {
      "field": "risk_tolerance",
      "operator": "in",
      "value": ["conservative", "moderate"],
      "weight": 0.7
    }
  ],
  "revenue_formula": {
    "formula_type": "percentage",
    "base_rate": 0.0075,
    "multiplier_field": "portfolio_value",
    "min_revenue": 1000,
    "max_revenue": 25000
  },
  "priority": "medium"
}
